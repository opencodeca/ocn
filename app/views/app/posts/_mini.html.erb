<li class="post">
  <% present post do |post| %>
    <div class="link">
      <%= link_to 'â–²', like_app_post_path(post), method: :post %>
      <%= link_to post.title, post.url %>
      <span class="domain"><%= post.domain %></span>
    </div>

    <div class="meta">
      <span class="points-count"><%= post.points_count %></span>
      <span class="comments-count"><%= post.comments_count %></span>
      <span class="author-link"><%= post.author_link %></span>
      <span class="timestamp"><%= time_ago_in_words(post.created_at) %></span>
    </div>
  <% end %>
</li>
