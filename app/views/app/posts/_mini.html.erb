<li class="post">
  <% present post do |post| %>
    <div class="link">
      <%= post.upvote_link(current_user) %>
      <% if post.url.blank? %>
        <%= link_to post.title, app_post_path(post) %>
      <% else %>
        <%= link_to post.title, post.url %>
      <% end %>
      <%= post.destroy_link(current_user) %>

      <% post.with_url do %>
        <span class="domain"><%= post.domain %></span>
      <% end %>
    </div>

    <div class="meta">
      <span class="points-count"><%= post.points_count %></span>
      <span class="comments-count"><%= post.comments_count %></span>
      <span class="author-link"><%= post.author_link %></span>
      <span class="timestamp" title="<%= post.created_at %>">
        <%= time_ago_in_words(post.created_at) %>
      </span>
    </div>
  <% end %>
</li>
